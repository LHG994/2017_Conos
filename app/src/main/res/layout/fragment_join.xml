<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_text"
        android:layout_marginLeft="10dp"
        android:text="Join"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/join_id"
        android:paddingTop="15dp"
        android:hint="ID"
        android:layout_below="@+id/join_text"
        android:layout_alignStart="@+id/join_pass"
        android:layout_marginTop="18dp"
        android:singleLine="true"/>

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/join_pass"
        android:layout_below= "@+id/join_id"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:hint="Password"
        />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/join_pass2"
        android:layout_below= "@+id/join_pass"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:hint="Password Verify"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_ok"
        android:layout_below="@+id/join_pass2"
        android:layout_alignEnd="@+id/join_pass2"
        android:layout_marginTop="27dp"
        android:text="OK"/>

</RelativeLayout>