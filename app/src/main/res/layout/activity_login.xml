<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/conos"
        android:layout_marginTop="150dp"/>


    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/id_et"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="ID"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/password_et"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/id_et"
        android:paddingTop="40dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"

        android:text="Login"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/password_et"
        android:layout_alignEnd="@+id/password_et" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_button"

        android:text="Join"
        android:layout_alignBaseline="@+id/login_button"
        android:layout_alignBottom="@+id/login_button"
        android:layout_alignStart="@+id/password_et" />

</RelativeLayout>